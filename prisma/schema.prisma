// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Empresa {
  id          String         @id @default(uuid())
  nome        String
  email       String         @unique
  senha_hash  String
  criado_em   DateTime       @default(now())
  atualizado_em DateTime     @default(now()) @updatedAt
  pdvs        Pdv[]
  funcionarios Funcionario[]
  estagios    EstagioFunil[]
  leads       Lead[]
}

model Pdv {
  id            String        @id @default(uuid())
  id_empresa    String
  nome          String
  criado_em     DateTime      @default(now())
  atualizado_em DateTime      @default(now()) @updatedAt
  empresa       Empresa       @relation(fields: [id_empresa], references: [id], onDelete: Restrict)
  funcionarios  Funcionario[]

  @@index([id_empresa])
}

model Funcionario {
  id            String        @id @default(uuid())
  id_empresa    String
  id_pdv        String
  nome          String
  email         String        @unique
  senha_hash    String
  cargo         String
  ativo         Boolean       @default(true)
  inativado_em  DateTime?
  criado_em     DateTime      @default(now())
  atualizado_em DateTime      @default(now()) @updatedAt
  empresa       Empresa       @relation(fields: [id_empresa], references: [id], onDelete: Restrict)
  pdv           Pdv           @relation(fields: [id_pdv], references: [id], onDelete: Restrict)
  leads         Lead[]

  @@index([id_empresa])
  @@index([id_pdv])
}

model ReatribuicaoFuncionario {
  id                    String   @id @default(uuid())
  id_empresa            String
  id_funcionario_origem String
  id_funcionario_destino String
  quantidade_leads      Int
  observacao            String?
  criado_por_tipo       String
  criado_por_id         String
  criado_em             DateTime @default(now())

  @@index([id_empresa])
  @@index([id_funcionario_origem])
  @@index([id_funcionario_destino])
}

model AuditoriaEquipe {
  id                 String   @id @default(uuid())
  id_empresa         String
  id_funcionario_alvo String
  acao               String
  campo              String?
  valor_anterior     String?
  valor_novo         String?
  observacao         String?
  autor_tipo         String
  autor_id           String
  criado_em          DateTime @default(now())

  @@index([id_empresa])
  @@index([id_funcionario_alvo])
  @@index([acao])
}

model EstagioFunil {
  id            String        @id @default(uuid())
  id_empresa    String
  nome          String
  ordem         Int
  tipo          String
  criado_em     DateTime      @default(now())
  atualizado_em DateTime      @default(now()) @updatedAt
  empresa       Empresa       @relation(fields: [id_empresa], references: [id], onDelete: Restrict)
  leads         Lead[]

  @@index([id_empresa])
  @@unique([id_empresa, ordem])
}

model Lead {
  id             String       @id @default(uuid())
  id_empresa     String
  id_funcionario String
  id_estagio     String
  nome           String
  telefone       String
  valor_consorcio Float
  observacoes    String?
  motivo_perda   String?
  documento_aprovacao_url String?  // URL do documento de aprovação (carta de crédito, etc)
  criado_em      DateTime     @default(now())
  atualizado_em  DateTime     @default(now()) @updatedAt
  empresa        Empresa      @relation(fields: [id_empresa], references: [id], onDelete: Restrict)
  funcionario    Funcionario  @relation(fields: [id_funcionario], references: [id], onDelete: Restrict)
  estagio        EstagioFunil @relation(fields: [id_estagio], references: [id], onDelete: Restrict)
  pendencias     Pendencia[]

  @@index([id_empresa])
  @@index([id_funcionario])
  @@index([id_estagio])
}

model Pendencia {
  id             String    @id @default(uuid())
  id_empresa     String
  id_lead        String
  tipo           String    // ex: "SEM_RESPOSTA", "CARTA_CREDITO_PENDENTE", "DOCUMENTOS_PENDENTES", "QUEDA_RESERVA"
  descricao      String
  documento_url  String?   // URL do documento anexado (ex: carta de crédito aprovada)
  resolvida      Boolean   @default(false)
  resolvida_em   DateTime?
  criado_em      DateTime  @default(now())
  atualizado_em  DateTime  @default(now()) @updatedAt
  lead           Lead      @relation(fields: [id_lead], references: [id], onDelete: Cascade)

  @@index([id_empresa])
  @@index([id_lead])
}

model WhatsappInstancia {
  id             String    @id @default(uuid())
  id_empresa     String
  id_criador     String
  nome           String    // Nome amigável definido pelo usuário
  instance_name  String    // Nome da instância na Evolution API
  status         String    // connected, disconnected, qrcode, etc
  phone          String?   // Número do WhatsApp conectado
  profile_name   String?   // Nome do perfil do WhatsApp
  profile_pic    String?   // URL da foto de perfil
  criado_em      DateTime  @default(now())
  atualizado_em  DateTime  @default(now()) @updatedAt

  @@index([id_empresa])
  @@index([id_criador])
  @@unique([instance_name])
}

model WhatsappAutomacao {
  id                    String   @id @default(uuid())
  id_empresa            String
  id_whatsapp_instancia String
  evento                String
  id_estagio_destino    String?
  tipo_destino          String   @default("FIXO")
  telefone_destino      String?
  mensagem              String?
  ativo                 Boolean  @default(true)
  // Novos campos para horário flexível e rastreamento
  horario_raw           String?  // Texto original digitado pelo usuário
  horario_normalizado   String?  // Texto normalizado (ex: "9 horas", "30 minutos")
  delay_minutos         Int?     // Delay em minutos após o trigger
  timezone              String   @default("America/Sao_Paulo")
  // Status e rastreamento de job
  status                String   @default("ATIVA") // ATIVA, INATIVA, ERRO_CONFIG, ERRO_JOB
  job_id                String?  // ID do job no scheduler
  job_status            String?  // SCHEDULED, NOT_SCHEDULED, DELETED, FAILED
  ultima_sincronizacao_job_em DateTime?
  ultima_execucao_em    DateTime?
  proxima_execucao_em   DateTime?
  // Soft delete para auditoria
  deleted_at            DateTime?
  // Timestamps
  criado_em             DateTime @default(now())
  atualizado_em         DateTime @default(now()) @updatedAt
  etapas                WhatsappAutomacaoEtapa[]
  agendamentos          WhatsappAutomacaoAgendamento[]

  @@index([id_empresa, status])
  @@index([id_empresa, deleted_at])
  @@index([id_whatsapp_instancia])
  @@index([evento])
  @@index([ativo])
  @@index([job_id])
}

model WhatsappAutomacaoEtapa {
  id                    String   @id @default(uuid())
  id_empresa            String
  id_whatsapp_automacao String
  ordem                 Int
  delay_minutos         Int
  mensagem_template     String
  ativo                 Boolean  @default(true)
  criado_em             DateTime @default(now())
  atualizado_em         DateTime @default(now()) @updatedAt
  automacao             WhatsappAutomacao @relation(fields: [id_whatsapp_automacao], references: [id], onDelete: Cascade)
  agendamentos          WhatsappAutomacaoAgendamento[]

  @@index([id_empresa])
  @@index([id_whatsapp_automacao])
  @@unique([id_whatsapp_automacao, ordem])
}

model WhatsappAutomacaoAgendamento {
  id                    String   @id @default(uuid())
  id_empresa            String
  id_whatsapp_automacao String
  id_etapa              String
  id_lead               String
  // New idempotency fields for robust duplicate prevention
  id_estagio_trigger    String?  // Stage that triggered this follow-up
  chave_idempotencia    String?  // Deterministic key: {empresa}:{lead}:{stage_trigger}:{automacao}:{etapa}
  // Keep legacy field for backwards compatibility during rollout
  referencia_evento     String
  mensagem_template     String
  contexto_json         String
  agendado_para         DateTime
  status                String   @default("PENDENTE")
  // Status flow: PENDENTE -> PROCESSANDO (claimed) -> ENVIADO | PENDENTE (retry) | FALHA | CANCELADO
  tentativas            Int      @default(0)
  erro_ultimo          String?
  enviado_em            DateTime?
  criado_em             DateTime @default(now())
  atualizado_em         DateTime @default(now()) @updatedAt
  automacao             WhatsappAutomacao @relation(fields: [id_whatsapp_automacao], references: [id], onDelete: Cascade)
  etapa                 WhatsappAutomacaoEtapa @relation(fields: [id_etapa], references: [id], onDelete: Cascade)

  @@index([id_empresa])
  @@index([id_whatsapp_automacao])
  @@index([id_etapa])
  @@index([id_lead])
  @@index([status, agendado_para])
  @@index([status]) // For stale PROCESSANDO recovery
  // New unique constraint for idempotency (replaces old reference-based dedup)
  @@unique([id_empresa, chave_idempotencia])
  // Keep legacy unique during migration, remove after full rollout
  @@unique([id_whatsapp_automacao, id_etapa, id_lead, referencia_evento])
}
